<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/list_bt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="友推模板-白色列表" />

        <TextView
            android:id="@+id/main_point_tv1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="8dp"
            android:background="@drawable/yt_reddot"
            android:gravity="center"
            android:textColor="#ffffff"
            android:visibility="invisible" />
    </FrameLayout>
    
    <HorizontalScrollView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/mian_login_linear"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="15dp" 
        android:scrollbars="@null"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        >
        
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/yt_wxact" 
            android:id="@+id/weixinlogin"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/main_sina_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:src="@drawable/yt_xinlangact" />

        <ImageView
            android:id="@+id/main_qq_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/yt_qqact" />

        <ImageView
            android:id="@+id/main_tencentwb_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/yt_tengxunact" />

        <ImageView
            android:id="@+id/main_renn_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/yt_renrenact" />
        
        <ImageView
            android:id="@+id/main_kaixinwang_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/yt_kaixinw" />
        
        <ImageView
            android:visibility="invisible"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/wechat_favorite"
            android:src="@drawable/yt_wechat_favorite" />
        
    </LinearLayout>
    
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/mian_login_linear"
        android:layout_alignParentLeft="true"
        android:gravity="left|center"
        android:text="第三方登录(水平滑动):" />

    <FrameLayout
        android:id="@+id/main_item_framelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignRight="@+id/main_test_bt"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/main_sinashare_imageview"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/yt_xinlangact" />

        <TextView
            android:id="@+id/main_point_tv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/yt_list_newmessage"
            android:gravity="center"
            android:text="+5"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_below="@+id/frameLayout1" >

        <Button
            android:id="@+id/popup_bt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="友推模板-黑色网格" />

        <TextView
            android:id="@+id/main_point_tv2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="8dp"
            android:background="@drawable/yt_reddot"
            android:gravity="center"
            android:textColor="#ffffff"
            android:visibility="invisible" />
    </FrameLayout>

    <Button
        android:id="@+id/main_test_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignLeft="@+id/textView1"
        android:text="积分中心" />

    <Button
        android:id="@+id/main_whiteviewpager_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout2"
        android:layout_alignRight="@+id/frameLayout2"
        android:layout_below="@+id/frameLayout2"
        android:text="友推模板-白色九宫格" />

    <Button
        android:id="@+id/main_addpoint_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="添加积分" />

    <Button
        android:id="@+id/main_givepoint_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:text="赠送积分" />

</RelativeLayout>
